static function _acerta()
procregua(szl->(lastrec()))

_cfilszl:=xfilial("SZL")
_cfilszm:=xfilial("SZM")
_cfilsb1:=xfilial("Sb1")

szl->(dbsetorder(1))
szm->(dbsetorder(1))
sb1->(dbsetorder(1))

szl->(dbseek(_cfilszl,.t.))
while ! szl->(eof())         
   _ncasas := szl->zl_casasd
	szm->(dbseek(_cfilszm+szl->zl_numpro,.t.))
	incproc(szl->zl_numpro+"1")		
	if szl->zl_umprop =="2" .and. empty(szm->zm_prcun2)
		while !szm->(eof()) .and.;            
	      szm->zm_filial == _cfilszm .and.;         	      
	      szm->zm_numpro == szl->zl_numpro         
			incproc("Acertando SZM..."+szm->zm_numpro+"2")		
	//		sb1->(dbseek(_cfilsb1+szm->zm_codpro,.t.))
			szm->(reclock("SZM",.f.))                  
			_mvalor := szm->zm_prcuni           
			_mvalor2 := (szm->zm_prcuni*szm->zm_qtde2)/szm->zm_qtde1           
 			replace szm->zm_prcun2 with _mvalor
 			replace szm->zm_prcuni with _mvalor2 			
			szm->(msunlock())
			szm->(dbskip())
		  end	
	endif
	szl->(dbskip())
end
//sd5->(retindex("SD5"))
//_cindsd5+=sd5->(ordbagext())
//ferase(_cindsd5)
return

