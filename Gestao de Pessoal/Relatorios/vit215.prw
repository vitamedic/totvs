static function rptdetail()
cbcont:=0
m_pag :=1
li    :=80
cbtxt :=space(10)

cabec1:=""
cabec2:=""

_cfilsra:=xfilial("SRA")
sra->(dbsetorder(1))

processa({|| _geratmp()})

setprc(0,0)

@ 000,000 PSAY avalimp(limite)+chr(18)
	
setregua(se1->(lastrec()))

tmp1->(dbgotop())
while ! tmp1->(eof()) .and.;
			lcontinua
  	@ prow()+1,000 PSAY "                            RECIBO DE ENTREGA "
	@ prow()+5,005 PSAY "Recebi da VITAMEDIC INDÚSTRIA FARMACÊUTICA LTDA, minha carteira de trabalho"
	@ prow()+2,005 PSAY "no dia " + dtoc(ddatabase) +" , que se encontrava  no  Departamento de  Pessoal para "
	@ prow()+2,005 PSAY "devidas anotações."
	@ prow()+8,005 PSAY tmp1->nome
	@ prow()+16,005 PSAY replicate("-",78)
	tmp1->(dbskip())
  	@ prow()+5,000 PSAY "                            RECIBO DE ENTREGA "
	@ prow()+5,005 PSAY "Recebi da VITAMEDIC INDÚSTRIA FARMACÊUTICA LTDA, minha carteira de trabalho"
	@ prow()+2,005 PSAY "no dia " + dtoc(ddatabase) +" , que se encontrava  no  Departamento de  Pessoal para "
	@ prow()+2,005 PSAY "devidas anotações."
	@ prow()+8,005 PSAY tmp1->nome
	tmp1->(dbskip())
	if  ! tmp1->(eof())
		@ 66,00 PSAY " "
		@ 00,00 PSAY " "
//	   eject
	endif   
	if labortprint
		@ prow()+2,000 PSAY "***** CANCELADO PELO OPERADOR *****"
		lcontinua:=.f.
	endif
end
set device to screen

 tmp1->(dbclosearea())

if areturn[5]==1
   set print to
   dbcommitall()
   ourspool(wnrel)
endif
ms_flush()
return

static function _geratmp()
procregua(1)

incproc("Selecionando funcionários...")
_cquery:=" SELECT"
_cquery+=" RA_MAT MAT,RA_NOME NOME
_cquery+=" FROM "
_cquery+=  retsqlname("SRA")+" SRA"
_cquery+=" WHERE"
_cquery+="     SRA.D_E_L_E_T_<>'*'"
_cquery+=" AND RA_FILIAL='"+_cfilsra+"'"
_cquery+=" AND RA_SITFOLH<>'D'"
_cquery+=" AND RA_MAT BETWEEN '"+mv_par01+"' AND '"+mv_par02+"'"
_cquery+=" AND RA_NOME BETWEEN '"+mv_par03+"' AND '"+mv_par04+"'"
_cquery+=" ORDER BY"
_cquery+=" RA_NOME"

_cquery:=changequery(_cquery)

tcquery _cquery new alias "TMP1"
//tcsetfield("TMP1","ADMISSA","D")
//tcsetfield("TMP1","VCTOEXP","D")
//tcsetfield("TMP1","SALARIO"  ,"N",15,2)
return

